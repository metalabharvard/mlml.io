  {{ $relatedItems.Set "projects" (slice) }}
  {{- range $project := $element.Params.Projects -}}
    {{- $relatedItems.Add "projects" $project.label -}}
  {{- end -}}
  {{ $links := $element.Params.Links }}
  {{ $relatedItems.Set "links" (slice) }}
