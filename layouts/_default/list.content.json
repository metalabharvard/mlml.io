{{ $content := newScratch }}
{{ $content.SetInMap "list" "projects" ($projectsScratch.Get "projects") }}
{{ $content.SetInMap "list" "events" ($eventsScratch.Get "events") }}
{{ $content.SetInMap "list" "members" ($membersScratch.Get "members") }}
{{- $content.Get "list" | jsonify -}}